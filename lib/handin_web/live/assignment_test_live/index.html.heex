<.header>
  Listing Assignment tests
  <:actions>
    <.link
      :if={@current_user.role != "student"}
      patch={~p"/modules/#{@module_id}/assignments/#{@assignment_id}/tests/new"}
    >
      <.button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center mr-3 md:mr-0 mt-3">
        New Assignment test
      </.button>
    </.link>
  </:actions>
</.header>

<.table
  id="assignment_tests"
  rows={@streams.assignment_tests}
  row_click={
    fn {_id, assignment_test} ->
      JS.navigate(
        ~p"/modules/#{@module_id}/assignments/#{@assignment_id}/tests/#{assignment_test}"
      )
    end
  }
>
  <:col :let={{_id, assignment_test}} label="Name"><%= assignment_test.name %></:col>
  <:col :let={{_id, assignment_test}} label="Marks"><%= assignment_test.marks %></:col>
  <:col :let={{_id, assignment_test}} label="Command"><%= assignment_test.command %></:col>
  <:action :let={{_id, assignment_test}}>
    <div class="sr-only">
      <.link navigate={
        ~p"/modules/#{@module_id}/assignments/#{@assignment_id}/tests/#{assignment_test}"
      }>
        Show
      </.link>
    </div>
    <.link
      :if={@current_user.role != "student"}
      class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center mr-3 md:mr-0 mt-3"
      patch={
        ~p"/modules/#{@module_id}/assignments/#{@assignment_id}/tests/#{assignment_test}/edit"
      }
    >
      Edit
    </.link>
  </:action>
  <:action :let={{id, assignment_test}}>
    <.link
      :if={@current_user.role != "student"}
      class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
      phx-click={JS.push("delete", value: %{test_id: assignment_test.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.modal
  :if={@live_action in [:new, :edit]}
  id="assignment_test-modal"
  show
  on_cancel={JS.patch(~p"/modules/#{@module_id}/assignments/#{@assignment_id}/tests")}
>
  <.live_component
    module={HandinWeb.AssignmentTestLive.FormComponent}
    id={@assignment_test.id || :new}
    title={@page_title}
    action={@live_action}
    assignment_test={@assignment_test}
    assignment_id={@assignment_id}
    patch={~p"/modules/#{@module_id}/assignments/#{@assignment_id}/tests"}
  />
</.modal>
