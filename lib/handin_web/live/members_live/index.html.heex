<.module_tabs module_id={@module_id}></.module_tabs>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <div class="flex items-center justify-between pb-4">
    <label for="table-search" class="sr-only">Search</label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg
          class="w-5 h-5 text-gray-500 dark:text-gray-400"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
            clip-rule="evenodd"
          >
          </path>
        </svg>
      </div>
      <input
        type="text"
        id="table-search"
        class="block p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        placeholder="Search for items"
      />
    </div>
  </div>
  <div class="flex items-center justify-between pb-4">
    <div></div>
    <div>
      <.link
        patch={~p"/modules/#{@module_id}/members/new"}
        class="inline-flex items-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
      >
        Add Member
      </.link>
    </div>
  </div>
  <.table id="members" rows={@streams.members}>
    <:col :let={{_, member}} label="Email"><%= "#{member.email}" %></:col>
    <:action :let={{id, member}}>
      <.link
        phx-click={JS.push("delete", value: %{id: member.id}) |> hide("##{id}")}
        data-confirm="Are you sure?"
      >
        Delete
      </.link>
    </:action>
  </.table>
</div>
<.modal
  :if={@live_action == :new}
  id="member-modal"
  show
  on_cancel={JS.patch(~p"/modules/#{@module_id}/members/")}
>
  <.live_component
    module={HandinWeb.MembersLive.FormComponent}
    id={:new}
    title={@page_title}
    action={@live_action}
    module_id={@module_id}
    modules_invitations={%Handin.Modules.ModulesInvitations{}}
    patch={~p"/modules/#{@module_id}/members"}
  />
</.modal>
